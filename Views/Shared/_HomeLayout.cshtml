<!DOCTYPE html>

<html data-bs-theme="dark">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.7.0.js" integrity="sha256-JlqSTELeR4TLqP0OG9dxM7yDPqX1ox/HfgiSLBj8+kM=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/ca4cb27df3.js" crossorigin="anonymous"></script>
</head>
<body class="text-bg-dark" style="background-image: url('Images/Shiny Overlay.svg');background-repeat:no-repeat;">

    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column bg-dark" style="--bs-bg-opacity: .7;">
        <header class="mb-auto">
            <div>
                <h3 class="float-md-start mb-0">Messenger</h3>
            </div>
            <div>
                <button class="btn btn-outline-danger float-end me-4" onclick="window.location.href='Logout';" >Logout</button>
            </div>
        </header>
    </div>

    <div>
        @RenderBody()
    </div>


    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
</body>
</html>
